<?xml version="1.0" ?>
<!--
  Tabletop workspace for Kinova arm pick-and-place tasks.
  Features:
  - Large table (1.2m x 0.8m)
  - Colored balls for object detection
  - Proper lighting for camera visibility
-->
<sdf version="1.6">
  <world name="tabletop_workspace">

    <!-- Lighting -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Physics settings -->
    <physics type="ode">
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1</real_time_factor>
      <real_time_update_rate>1000</real_time_update_rate>
    </physics>

    <!-- ==================== TABLE ==================== -->
    <model name="table">
      <static>true</static>
      <pose>0.5 0 0 0 0 0</pose>
      <link name="table_link">
        <!-- Table top -->
        <visual name="tabletop_visual">
          <pose>0 0 0.75 0 0 0</pose>
          <geometry>
            <box>
              <size>1.2 0.8 0.03</size>
            </box>
          </geometry>
          <material>
            <ambient>0.6 0.4 0.2 1</ambient>
            <diffuse>0.6 0.4 0.2 1</diffuse>
          </material>
        </visual>
        <collision name="tabletop_collision">
          <pose>0 0 0.75 0 0 0</pose>
          <geometry>
            <box>
              <size>1.2 0.8 0.03</size>
            </box>
          </geometry>
        </collision>

        <!-- Table legs -->
        <visual name="leg1_visual">
          <pose>0.5 0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
        <collision name="leg1_collision">
          <pose>0.5 0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
        </collision>

        <visual name="leg2_visual">
          <pose>0.5 -0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
        <collision name="leg2_collision">
          <pose>0.5 -0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
        </collision>

        <visual name="leg3_visual">
          <pose>-0.5 0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
        <collision name="leg3_collision">
          <pose>-0.5 0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
        </collision>

        <visual name="leg4_visual">
          <pose>-0.5 -0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
          <material><ambient>0.3 0.3 0.3 1</ambient><diffuse>0.3 0.3 0.3 1</diffuse></material>
        </visual>
        <collision name="leg4_collision">
          <pose>-0.5 -0.3 0.375 0 0 0</pose>
          <geometry><cylinder><radius>0.03</radius><length>0.75</length></cylinder></geometry>
        </collision>
      </link>
    </model>

    <!-- ==================== COLORED BALLS ==================== -->

    <!-- Red Ball -->
    <model name="red_ball">
      <pose>0.4 0.15 0.80 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.00004</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.00004</iyy><iyz>0</iyz><izz>0.00004</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <material>
            <ambient>1.0 0.0 0.0 1</ambient>
            <diffuse>1.0 0.0 0.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <surface>
            <friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction>
          </surface>
        </collision>
      </link>
    </model>

    <!-- Green Ball -->
    <model name="green_ball">
      <pose>0.5 -0.1 0.80 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.00004</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.00004</iyy><iyz>0</iyz><izz>0.00004</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <material>
            <ambient>0.0 1.0 0.0 1</ambient>
            <diffuse>0.0 1.0 0.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <surface>
            <friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction>
          </surface>
        </collision>
      </link>
    </model>

    <!-- Blue Ball -->
    <model name="blue_ball">
      <pose>0.6 0.2 0.80 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.00004</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.00004</iyy><iyz>0</iyz><izz>0.00004</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <material>
            <ambient>0.0 0.0 1.0 1</ambient>
            <diffuse>0.0 0.0 1.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <surface>
            <friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction>
          </surface>
        </collision>
      </link>
    </model>

    <!-- Yellow Ball -->
    <model name="yellow_ball">
      <pose>0.7 -0.15 0.80 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.00004</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.00004</iyy><iyz>0</iyz><izz>0.00004</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <material>
            <ambient>1.0 1.0 0.0 1</ambient>
            <diffuse>1.0 1.0 0.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <surface>
            <friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction>
          </surface>
        </collision>
      </link>
    </model>

    <!-- Orange Ball -->
    <model name="orange_ball">
      <pose>0.55 0.0 0.80 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>0.05</mass>
          <inertia>
            <ixx>0.00004</ixx><ixy>0</ixy><ixz>0</ixz>
            <iyy>0.00004</iyy><iyz>0</iyz><izz>0.00004</izz>
          </inertia>
        </inertial>
        <visual name="visual">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <material>
            <ambient>1.0 0.5 0.0 1</ambient>
            <diffuse>1.0 0.5 0.0 1</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
          </material>
        </visual>
        <collision name="collision">
          <geometry><sphere><radius>0.03</radius></sphere></geometry>
          <surface>
            <friction><ode><mu>1.0</mu><mu2>1.0</mu2></ode></friction>
          </surface>
        </collision>
      </link>
    </model>

    <!-- ==================== DROP ZONE MARKER ==================== -->
    <model name="drop_zone">
      <static>true</static>
      <pose>0.3 -0.25 0.765 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <cylinder>
              <radius>0.08</radius>
              <length>0.005</length>
            </cylinder>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.8 1</ambient>
            <diffuse>0.8 0.8 0.8 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

  </world>
</sdf>
