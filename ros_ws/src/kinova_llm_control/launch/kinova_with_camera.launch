<?xml version="1.0"?>
<!--
  Launch Kinova Mico arm with RealSense D435 camera in Gazebo.

  This launch file starts:
  1. Gazebo with the Kinova Mico arm
  2. RealSense D435 camera (mounted on a stand near the workspace)
  3. MoveIt for motion planning
  4. LLM controller for natural language commands

  Usage:
    roslaunch kinova_llm_control kinova_with_camera.launch
-->
<launch>
  <!-- Arguments -->
  <arg name="kinova_robotType" default="m1n6s300"/>
  <arg name="use_trajectory_controller" default="true"/>
  <arg name="paused" default="false"/>
  <arg name="use_gui" default="true"/>

  <!-- LLM Configuration -->
  <arg name="project_id" default="account-pocs"/>
  <arg name="location" default="us-central1"/>
  <arg name="model_name" default="gemini-2.5-flash"/>

  <!-- Launch Gazebo with Kinova arm -->
  <include file="$(find kinova_gazebo)/launch/robot_launch.launch">
    <arg name="kinova_robotType" value="$(arg kinova_robotType)"/>
    <arg name="use_trajectory_controller" value="$(arg use_trajectory_controller)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_gui" value="$(arg use_gui)"/>
  </include>

  <!-- Spawn RealSense D435 camera on a stand -->
  <param name="camera_description"
         command="$(find xacro)/xacro $(find realsense_gazebo_description)/urdf/d435.urdf.xacro"/>

  <node name="spawn_camera" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param camera_description -model realsense_d435
              -x 0.5 -y 0.0 -z 0.5 -R 0 -P 0.5 -Y 3.14159"
        output="screen"/>

  <!-- Launch MoveIt -->
  <include file="$(find m1n6s300_moveit_config)/launch/m1n6s300_gazebo_demo.launch">
    <arg name="use_gui" value="false"/>
  </include>

  <!-- Launch LLM Controller -->
  <node name="llm_controller"
        pkg="kinova_llm_control"
        type="llm_controller.py"
        output="screen"
        respawn="false">
    <param name="project_id" value="$(arg project_id)"/>
    <param name="location" value="$(arg location)"/>
    <param name="model_name" value="$(arg model_name)"/>
  </node>

  <!-- Launch Command Interface for user input -->
  <node name="command_interface"
        pkg="kinova_llm_control"
        type="command_interface.py"
        output="screen"
        launch-prefix="xterm -e"/>

</launch>
