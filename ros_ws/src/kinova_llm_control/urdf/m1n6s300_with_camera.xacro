<?xml version="1.0"?>
<!--
  Combined URDF: Kinova Mico M1N6S300 + Intel RealSense D435 Camera
  Robot is mounted on the table (z=0.765), camera on a floor stand
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="m1n6s300_with_camera">

  <!-- Include Kinova robot description -->
  <xacro:include filename="$(find kinova_description)/urdf/m1n6s300.xacro"/>

  <!-- Include RealSense D435 camera -->
  <xacro:include filename="$(find realsense_gazebo_description)/urdf/_d435.urdf.xacro"/>

  <!-- World and root links -->
  <link name="world"/>
  <link name="root"/>

  <!-- Robot base on table surface (table is at x=0.5, surface at z=0.765) -->
  <!-- Place robot at back-center of table -->
  <joint name="connect_root_and_world" type="fixed">
    <parent link="world"/>
    <child link="root"/>
    <origin xyz="0.0 0.0 0.765" rpy="0 0 0"/>
  </joint>

  <!-- Kinova robot -->
  <xacro:property name="robot_root" value="root"/>
  <xacro:m1n6s300 base_parent="${robot_root}"/>

  <!-- Camera stand on floor (not on table) -->
  <link name="camera_stand">
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="1.0"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="1.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Camera stand position: in front of table, on floor -->
  <joint name="camera_stand_joint" type="fixed">
    <parent link="world"/>
    <child link="camera_stand"/>
    <origin xyz="1.2 0.0 0.0" rpy="0 0 0"/>
  </joint>

  <!-- Camera mount at top of stand -->
  <link name="camera_mount">
    <visual>
      <geometry>
        <box size="0.08 0.08 0.02"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.08 0.08 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="camera_mount_joint" type="fixed">
    <parent link="camera_stand"/>
    <child link="camera_mount"/>
    <origin xyz="0 0 1.01" rpy="0 0 0"/>
  </joint>

  <!-- RealSense D435 Camera - looking toward table -->
  <!-- Camera at height ~1m, looking down at ~30 deg toward table center -->
  <xacro:sensor_d435 parent="camera_mount" name="camera" topics_ns="camera"
                     align_depth="true"
                     enable_pointCloud="true"
                     depth_width="640"
                     depth_height="480"
                     depth_fps="30"
                     color_width="640"
                     color_height="480"
                     color_fps="30"
                     visualize="false">
    <!-- Tilt down ~30deg and face toward robot/table (rotate 180 on Z) -->
    <origin xyz="0 0 0.01" rpy="0 0.4 3.14159"/>
  </xacro:sensor_d435>

</robot>
